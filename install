#!/bin/bash
# Author: FlyinGrub
# Check my github : https://github.com/flyingrub/soundcloud-dl
# Share it if you like ;)
##############################################################
echo ''
echo ' *---------------------------------------------------------------------------*'
echo '|                             SCDL Installer                                  |'
echo ' *---------------------------------------------------------------------------*'
echo ''

function menu() {
    clear
    PS3='Please enter your choice: '
    local options=("Install" "Set the path where to download Music" "Quit")
    select opt in "${options[@]}"
    do
        case "$opt" in
            "Install")
                install ;;
            "Set the path where to download Music")
                setpath ;;
            "Quit")
                quit ;;
            *)
                clear && echo "Bad option"
                ;;
        esac
    done
}

function install() {
    detectedOS

    [[ "$platform" == 'linux'  ]] && sudo apt-get update && sudo apt-get -y install curl eyeD3
    [[ "$platform" == 'redhat' ]] && sudo yum install curl python-eyed3
    [[ "$platform" == 'arch'   ]] && sudo pacman -S curl python2-eyed3

    if [[ "$platform" == 'darwin' ]] ; then
        brew instal curl eyeD3
        cp scdl /usr/local/bin/
    else
        sudo cp scdl /usr/bin/
    fi
    cp example_.scdl.cfg $HOME/
}

function setpath() {
    echo "Where do you want to download your Music?"
    read -p 'path : ' path
    while [[ ! -d "$path" ]]
    do
        echo 'The path do not exist...'
        read -p 'Would you like to Create it? (y/n)?' choice
        if [ "$choice" = "y" ]; then
            mkdir $path
            "$?" && echo -e 'Error while creating the directory, living...' && exit 1
        fi
        echo "Where do you want to download your Music?"
        read -p 'path : ' path
    done
        echo -e 'pathtomusic="'"$path"'"'"\n"'continue="'"$cont"'"' > "$HOME/.scdl.cfg"
        echo -e 'Path set !\n'
}

function quit() {
    read -p 'Do you really want to leave the installer? (y/n) ' quit
    case "$quit" in
        "y")
            echo 'Bye!' && exit ;;
        "n")
            echo '' && menu ;;
        *)
            echo 'Bad option' && quit ;;
    esac
}

function detectedOS(){
    unamestr=$(uname)
    platform=$(echo "$unamestr" | tr '[:upper:]' '[:lower:]')
    [[ -f /etc/redhat-release  ]] && platform='redhat'
    [[ -f /etc/arch-release    ]] && platform='arch'
}

if [[ -f "$HOME/.scdl.cfg" ]]; then
    source "$HOME/.scdl.cfg"
    path=$pathtomusic
    menu
else
    echo -e 'No Config file detected... I will install scdl for you.\n'
    install
    setpath
    exit
fi

